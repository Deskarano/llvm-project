
block main
{
    input(input1[7:0], input2[8:0])
    output(output1, output2[3:0])
    state(a[7:0], clk)

    when(input2[5:3] <= 3b111 && input1 == 8b10101010)
    {
        a[6] = 1b0
        a[5] = 1b1
        a[4] = 1b0

        output2[1:0] = 2b2
    }

    when(clk == 1b1)
    {
        a[3:2] = 2b3
        a[7] = 1b1

        a[1] = 1b1 ^ a[0] + a[3]
        a[0] = 1b0
    }

    when(clk == 1b0)
    {
        output1 = a[0] & clk
    }
}